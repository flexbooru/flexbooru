<resources
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ns2="http://schemas.android.com/tools">

    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/is_light_status_bar</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">@bool/is_light_navigation_bar</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:navigationBarColor">@color/colorNavigationBar</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorError">@color/colorError</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="scrimBackground">@color/scrimBackground</item>
        <item name="preferenceTheme">@style/PreferenceTheme</item>
        <item name="alertDialogTheme">@style/AppTheme.AlertDialog.DayNight</item>
        <item name="actionOverflowMenuStyle">@style/Widget.OverflowMenuStyle.DayNight</item>
        <item name="android:actionOverflowMenuStyle">@style/Widget.OverflowMenuStyle.DayNight</item>
        <item name="android:popupWindowStyle">@style/Widget.PopupWindowStyle</item>
        <item name="materialButtonStyle">@style/Widget.Button.TextButton</item>
    </style>

    <style name="AppTheme.Main">
        <!-- MaterialDrawer specific values -->
        <item name="materialDrawerStyle">@style/MaterialDrawerStyle</item>
        <item name="materialDrawerHeaderStyle">@style/Widget.MaterialDrawerHeaderStyle</item>
    </style>

    <style name="MaterialDrawerStyle" parent="Widget.MaterialDrawerStyle">
        <item name="materialDrawerDividerColor">@color/colorDividerItem</item>
    </style>

    <style name="AppTheme.Animation">
        <item name="android:windowAnimationStyle">@style/Animation.RightInRightOutAnim</item>
    </style>

    <style name="AppTheme.NoAnimation">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/background_launcher</item>
    </style>

    <style name="AppTheme.NoAnimation.Detail">
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">@color/transparent</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
    </style>

    <style name="AppTheme.AlertDialog.DayNight" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/background_dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Button.TextButton.Dialog</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Button</item>
    </style>

    <style name="Widget.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/corner_radius</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardElevation">@dimen/elevation_size</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="contentPadding">0dp</item>
        <item name="cardBackgroundColor">@color/colorCardBackground</item>
    </style>

    <style name="TransparentBottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheetStyle</item>
    </style>

    <style name="TransparentBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="PreferenceTheme" parent="PreferenceThemeOverlay">
        <item name="preferenceStyle">@style/PreferenceStyle</item>
    </style>

    <style name="PreferenceStyle" parent="Preference.Material">
        <item name="iconSpaceReserved">true</item>
    </style>

    <style name="PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

    <style name="Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/colorBackground</item>
        <item name="android:elevation" ns2:ignore="NewApi">@dimen/elevation_appbar</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.ActionBar</item>
        <item name="popupTheme">@style/PopupOverlay</item>
    </style>

    <style name="Widget.Toolbar.Transparent">
        <item name="android:background">@color/transparent</item>
        <item name="android:elevation">0dp</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
    </style>

    <style name="Widget.PopupWindowStyle" parent="@style/Widget.AppCompat.PopupWindow">
        <item name="android:popupElevation">@dimen/elevation_size</item>
    </style>

    <style name="Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="elevation">@dimen/elevation_size</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="Widget.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="Widget.Button.TextButton.Dialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="Widget.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="Widget.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="elevation">@dimen/elevation_fab</item>
    </style>

    <style name="Widget.Account.FloatingActionButton" parent="@style/Widget.FloatingActionButton">
        <item name="backgroundTint">@color/background_tint_account_action</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="Widget.OverflowMenuStyle.DayNight" parent="Widget.OverflowMenuStyle">
        <item name="android:dropDownVerticalOffset">@dimen/popup_drop_down_offset</item>
        <item name="android:popupElevation">@dimen/elevation_size</item>
    </style>

    <style name="Widget.OverflowMenuStyle" parent="Widget.MaterialComponents.PopupMenu.Overflow"/>

    <style name="Animation.RightInRightOutAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="TagFilters">
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:strokeColor">?android:attr/textColorTertiary</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="outlineWidth">1dp</item>
        <item name="foreground">?selectableItemBackground</item>
        <item name="actionIcon">@drawable/tag_dot</item>
        <item name="showIcon">true</item>
    </style>
    <style name="AppTheme.Text" parent="TextAppearance.MaterialComponents.Body1"/>
</resources>
