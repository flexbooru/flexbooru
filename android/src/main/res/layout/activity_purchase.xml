<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="onlymash.flexbooru.ui.PurchaseActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
            android:padding="@dimen/spacing_middle"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_middle"
                style="@style/AppTheme.CardView">

            <LinearLayout
                    android:paddingTop="@dimen/spacing_middle"
                    android:paddingBottom="@dimen/spacing_middle"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                        android:text="@string/purchase_info_title"
                        android:padding="@dimen/spacing_middle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceCaption"/>
                <androidx.appcompat.widget.AppCompatTextView
                        android:text="@string/purchase_info_remove_ads"
                        android:padding="@dimen/spacing_middle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBody1"/>
                <androidx.appcompat.widget.AppCompatTextView
                        android:text="@string/purchase_info_unlock_full_features"
                        android:padding="@dimen/spacing_middle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceBody1"/>
                <androidx.appcompat.widget.AppCompatTextView
                        android:text="@string/purchase_info_features"
                        android:paddingStart="@dimen/spacing_large"
                        android:paddingEnd="@dimen/spacing_middle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceCaption"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_middle"
                style="@style/AppTheme.CardView">

            <LinearLayout
                    android:paddingTop="@dimen/spacing_middle"
                    android:paddingBottom="@dimen/spacing_middle"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                        android:text="@string/purchase_pay_title"
                        android:padding="@dimen/spacing_middle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?attr/textAppearanceCaption"/>
                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/pay_google_play"
                        android:text="@string/purchase_pay_google_play"
                        android:padding="@dimen/spacing_middle"
                        android:drawableStart="@drawable/ic_logo_google_play_24dp"
                        android:drawablePadding="@dimen/spacing_middle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:textAppearance="?attr/textAppearanceBody1"/>
                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/pay_alipay"
                        android:text="@string/purchase_pay_alipay"
                        android:padding="@dimen/spacing_middle"
                        android:drawableStart="@drawable/ic_logo_alipay_24dp"
                        android:drawablePadding="@dimen/spacing_middle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:textAppearance="?attr/textAppearanceBody1"/>
                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/pay_redeem_code"
                        android:text="@string/purchase_pay_order_code"
                        android:padding="@dimen/spacing_middle"
                        android:drawableStart="@drawable/ic_redeem_24dp"
                        android:drawablePadding="@dimen/spacing_middle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:textAppearance="?attr/textAppearanceBody1"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>
